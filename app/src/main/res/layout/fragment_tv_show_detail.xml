<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragments.TvShowDetailFragment">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="179dp"
        android:layout_height="194dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/back"
        android:layout_marginTop="16dp"
        android:src="@drawable/image_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextTitle"
        android:layout_width="195dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:text="TITLE"
        android:textSize="20dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Date"
        android:layout_width="112dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Date"        android:background="@drawable/back"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="112dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"

        android:background="@drawable/back"
        android:text="Rating"
        app:layout_constraintEnd_toStartOf="@+id/TextState"
        app:layout_constraintTop_toBottomOf="@+id/TextGenere" />

    <TextView
        android:id="@+id/textRuntime"
        android:layout_width="112dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"

        android:background="@drawable/back"
        android:text="RunTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <TextView
        android:id="@+id/TextState"
        android:layout_width="112dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"        android:background="@drawable/back"

        android:text="State"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRuntime" />

    <TextView
        android:id="@+id/TextGenere"
        android:layout_width="112dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"

        android:layout_marginTop="20dp"
        android:background="@drawable/back"
        android:text="Genere"
        app:layout_constraintEnd_toStartOf="@+id/textRuntime"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toEndOf="@+id/Date"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <RelativeLayout
        android:id="@+id/RVEpisodes"
        android:layout_width="411dp"
        android:layout_height="301dp"
        android:background="@drawable/back"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="198dp"
        android:layout_height="134dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextTitle"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TextDescription"
                android:layout_width="196dp"
                android:layout_height="133dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/back"
                android:text="Description" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>